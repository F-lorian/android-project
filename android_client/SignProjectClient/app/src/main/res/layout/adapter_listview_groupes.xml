<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_groupe"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:id="@+id/layout_nom_groupe"
            style="@style/Paragraphe"
            android:orientation="vertical"
            android:background="@color/fond2">

            <TextView
                android:id="@+id/nom_adapter_groupe"
                style="@style/Title"
                android:text="GROUPE"/>

            <TextView
                android:id="@+id/description_adapter_groupe"
                style="@style/Paragraphe"
                android:padding="0dp"
                android:text="description..."/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_type_groupe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="2dp"
            android:background="@color/fond1">

            <LinearLayout
                android:id="@+id/layout_type"
                style="@style/DataIndicator"
                android:background="@color/base_color">

                <ImageView
                    android:id="@+id/image_type"
                    style="@style/DataIndicatorImage"
                    android:src="@drawable/ic_eye"/>

                <TextView
                    android:id="@+id/type_adapter_groupe"
                    style="@style/DataIndicatorText"
                    android:text="@string/type_public"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_members"
                style="@style/DataIndicator"
                android:layout_marginLeft="2sp"
                android:background="@color/base_color">

                <ImageView
                    android:id="@+id/image_members"
                    style="@style/DataIndicatorImage"
                    android:src="@drawable/ic_groupe"/>

                <TextView
                    android:id="@+id/members_adapter_groupe"
                    style="@style/DataIndicatorText"
                    android:text="0"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_state"
                style="@style/DataIndicator"
                android:layout_marginLeft="2sp"
                android:background="@color/color_info">
                <ImageView
                    android:id="@+id/image_etat"
                    style="@style/DataIndicatorImage"
                    android:src="@drawable/ic_user"/>

                <TextView
                    android:id="@+id/user_adapter_etat"
                    style="@style/DataIndicatorText"
                    android:text="@string/membre"/>
            </LinearLayout>

            <TextView
                android:id="@+id/nb_demandes"
                style="@style/DataIndicator"
                android:text="+3"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@color/color_important"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>