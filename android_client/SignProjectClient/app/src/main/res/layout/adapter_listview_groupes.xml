<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_groupe"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5sp"
        android:layout_marginBottom="0sp">

        <LinearLayout
            android:id="@+id/layout_nom_groupe"
            android:layout_width="match_parent"
            android:layout_height="@dimen/hauteur_champs_saisie"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/nom_adapter_groupe"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hauteur_champs_saisie"
                android:text="GROUPE"
                android:textSize="25sp"
                android:background="#efefef"
                android:paddingLeft="10sp"
                android:paddingTop="6sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_type_groupe"
            android:layout_width="match_parent"
            android:layout_height="25sp"
            android:orientation="horizontal"
            android:paddingLeft="5sp"
            android:paddingRight="5sp"
            android:gravity="center_vertical"
            android:background="#dbdbdb">

            <ImageView
                android:id="@+id/image_type"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:src="@drawable/ic_eye"
                android:background="@android:color/white"/>

            <TextView
                android:id="@+id/type_adapter_groupe"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="Public"
                android:textSize="15sp"
                android:gravity="center"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:background="@android:color/darker_gray"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/user_adapter_etat"
                android:layout_width="wrap_content"
                android:layout_height="20sp"
                android:text="Membre"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_marginLeft="5sp"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:background="#ff9d00"
                android:textColor="@android:color/white"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>