<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageSpinnerType"
        android:layout_width="@dimen/hauteur_champs_saisie"
        android:layout_height="match_parent"
        android:src="@drawable/ic_controleur"/>

    <TextView
        android:id="@+id/textViewSpinnerType"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Controleur"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_right_text_spinner"
        android:textSize="@dimen/text_size_spinner" />

</RelativeLayout>